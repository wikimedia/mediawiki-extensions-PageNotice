{
	"name": "PageNotice",
	"author": "Daniel Kinzler",
	"url": "https://www.mediawiki.org/wiki/Extension:PageNotice",
	"descriptionmsg": "pagenotice-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.31.0"
	},
	"MessagesDirs": {
		"PageNotice": [
			"i18n"
		]
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\PageNotice\\": "includes/"
	},
	"ResourceModules": {
		"ext.pageNotice": {
			"styles": [
				"modules/ext.pageNotice.css"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "extensions/PageNotice"
	},
	"Hooks": {
		"ArticleViewHeader": "MediaWiki\\Extension\\PageNotice\\Hooks::onArticleViewHeader",
		"ArticleViewFooter": "MediaWiki\\Extension\\PageNotice\\Hooks::onArticleViewFooter"
	},
	"config": {
		"PageNoticeDisablePerPageNotices": {
			"value": false
		}
	},
	"manifest_version": 2
}
